<%- include('partials/header'); -%>
  <div class="relative">
    <div class="background-image lg:bg-videographer1 md:bg-videographer1 lg:h-[72.8%] h-full w-full bg-cover" alt=""></div>
    <!-- Overlay -->
    <div class="absolute inset-0 bg-black opacity-50"></div>
    <!-- Content -->
    <div class="absolute inset-0 flex items-center justify-center">
      <div class="text-center">
        <h1 class="text-4xl font-bold text-white">Welcome to Leo Streaming</h1>
        <p class="text-lg text-white">Watch your favorite contents and TV shows</p>
        <% if (user) { %>
          <a href="/home"
            class="inline-block px-6 py-3 mt-4 text-lg font-semibold text-white bg-orange-500 hover:bg-orange-600 rounded-lg">Watch
            Videos</a>
          <% } else { %>
            <a href="/signup"
              class="inline-block px-6 py-3 mt-4 text-lg font-semibold text-white bg-orange-500 hover:bg-orange-600 rounded-lg">Get
              Started</a>
            <% } %>
      </div>
    </div>

    <%- include('partials/footer'); -%>